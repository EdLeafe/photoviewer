[Unit]
Description=Photoviewer application
After=network.target

[Service]
User=pi
Group=pi
WorkingDirectory=/home/pi/projects/photoviewer
Environment=
Environment="PATH=/home/pi/projects/photoviewer/vphoto/bin"
ExecStart=/home/pi/projects/photoviewer/vphoto/bin/python3 /home/pi/projects/photoviewer/photo.py
Restart=always    
RestartSec=3

[Install]
WantedBy=multi-user.target
