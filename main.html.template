<html>
<head>
  <meta http-equiv="refresh" content="%%INTERVAL%%" />
  <style>
    html, body {
      margin: 0;
      height: 100%;
      background-color: #000000;
    }
    .imgcontainer {
      width: 100%;
      height: 100%;
    }
    .full {
      width: 100%;
      max-height: 100%;
      object-fit: contain;
    }
  </style>
  <script>
    var currHash = "";
    var port = "9001" ;

    function checkStatus(obj) {
        newHash = obj.responseText;
        if ( currHash === "" ) {
          // First time page is loaded
          currHash = newHash;
        } else if ( newHash !== currHash ) {
          currHash = newHash;
          refreshPage();
        }
    }

    window.setInterval(function() {
      getLatestHash() ;
    }, 10000);

    function getLatestHash() {
      var xhr = new XMLHttpRequest();
      xhr.addEventListener("load", checkStatus);
      xhr.open("GET", "http://localhost:" + port + "/status");
      xhr.send() ;
    }
  </script>
</head>
<body>
<div class="imgcontainer">
  <img class="full" src="%%URL%%" />
</div>
</body>
</html>

